[user]
  email = yoann.fleury@yahoo.com
  name = Yoann Fleury

[core]
  editor = vim
  excludesfile = ~/.gitignore_global

[commit]
  template = ~/.git_commit_template

[alias]
  amend = commit --amend
  amend-no-edit = commit --amend --no-edit
  conflicts = diff --name-only --diff-filter=U
  fetch = fetch --prune
  l = log --pretty=oneline --graph --abbrev-commit
  last = log -1 HEAD
  st = status -sb
  stsh = stash --keep-index
  staash = stash --include-untracked
  staaash = stash --all
  unmerged = branch -r --no-merged
  unstage = reset HEAD --
  untrack = rm --cached
  standup = log --oneline --since=yesterday.midnight

[color "status"]
  added = green
  changed = yellow
  untracked = red

[diff]
  # Use better prefix (c, i, w) instead of 'a' and 'b' in diff
  mnemonicPrefix = true
  wordRegex = .

[help]
  # Automatically correct and execute mistyped commands
  autocorrect = 1

[credential]
  # Cache the http credentials
  helper = cache

[init]
  templatedir = ~/.git-templates

[includeIf "gitdir:~/work/"]
  path = ~/.gitconfig-work

[rerere]
  enabled = true
  autoupdate = true

[push]
  default = current

